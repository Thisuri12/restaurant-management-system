{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@models/*": ["src/models/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["src/**/*"]
}
